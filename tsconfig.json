{
  "compilerOptions": {
      "strict": true,
      "useUnknownInCatchVariables": false,
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "target": "es2017",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*",
              "src/types/*"
          ]
      },
      "typeRoots": [
          "src/types",
          "node_modules/@types"
      ]
  },
  "include": [
      "src/**/*"
  ]
}
